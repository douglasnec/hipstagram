<%= form_for @post, html: { multipart: true }  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <br />
  <hr>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <br />
  <hr>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <br />
  <hr>

  <%= f.label :tag_names %>
  <%= f.text_area :tag_names %>

  <br />
  <hr>

  <%= f.submit %>
<% end %>